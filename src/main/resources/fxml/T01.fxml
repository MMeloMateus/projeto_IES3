<StackPane prefHeight="400" prefWidth="600" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ClassesController.T01Controller">

    <VBox alignment="CENTER" spacing="15.0">
