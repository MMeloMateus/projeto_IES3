      <VBox alignment="CENTER_LEFT" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="25.0" prefWidth="187.0">
         <children>
            <Label text="Usuário" />
            <TextField fx:id="loginField" />
         </children>
      </VBox>
      <VBox alignment="CENTER_LEFT" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="25.0" prefWidth="187.0">
         <children>
            <Label text="Senha" />
            <PasswordField fx:id="senhaField" />
         </children>
      </VBox>
      <VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="43.0" prefWidth="187.0">
         <children>
            <Button fx:id="entrarButton" onAction="#handleEntrarButtonAction" alignment="CENTER" contentDisplay="CENTER" prefHeight="30.0" prefWidth="187.0" style="-fx-background-color: #1D1D28; -fx-background-radius: 20; -fx-border-radius: 20;" text="Entrar" textFill="WHITE" />
         </children>
      </VBox>
    </VBox>
